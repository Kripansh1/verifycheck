{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/assets/(.*)", "dest": "dist/assets/$1" },
    { "src": "/(.*\\.(?:js|css|png|jpg|jpeg|svg|gif|webp|ico|txt|webmanifest))", "dest": "dist/$1" },
    { "src": "/(.*)", "dest": "dist/index.html" }
  ]
}
